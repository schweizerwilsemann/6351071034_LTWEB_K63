@model _6351071034_LTWEB_K63.Models.KHACHHANG
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayOutPage.cshtml";
}

<head>
    <title>Resgister</title>
    <link rel="stylesheet" type="text/css" href="~/Content/register.css" />
    <script type="text/javascript" src="~/Scripts/script.js"></script>
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { onsubmit = "return validateForm();" }))
    {
        @Html.AntiForgeryToken()

        <h1>Log in</h1>
        <p>To be able to use all features, you will require an account. The form below will allow you to create a new account if you don't have one yet.</p>
        <br />

        <label for="Taikhoan">Username</label><br>
        @Html.TextBoxFor(m => m.Taikhoan, new { @class = "form-control", @id = "Taikhoan" })
        <span id="usernameError" class="text-danger"></span>
        @Html.ValidationMessageFor(m => m.Taikhoan, "", new { @class = "text-danger" })
        <br />

        <label for="Matkhau">Password</label><br>
        @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @id = "Matkhau" })
        <span id="passwordError" class="text-danger"></span>
        @Html.ValidationMessageFor(m => m.Matkhau, "", new { @class = "text-danger" })
        <br />

        <div class="button" style="display:flex; justify-content:start; margin-top:2rem">
            <input type="submit" style="cursor: pointer;
                                     width: 170px;
                                     height: 45px;
                                     text-align:center;
                                     border-radius: 22px;
                                     background-color: #333;
                                     color: #ede385;"
                   class="button" value="Login">
            <a href="@Url.Action("Register", "Account")" style="display: inline-block;
                 cursor: pointer;
                 width: 170px;
                 height: 45px;
                 margin-left: 10px;
                 line-height: 45px; /* Ensures vertical centering */
                 text-align:center;
                 border-radius: 22px;
                 background-color: #333;
                 color: #ede385;
                 text-decoration: none;">
                Register
            </a>
        </div>
    }
    <div style="margin-top: 3rem;" >
        @Html.ActionLink("Login as admin", "Login", "Admin")
    </div>

</body>

<script type="text/javascript">
    function validateForm() {
        var isValid = true;
        var username = document.getElementById("Taikhoan").value;
        var password = document.getElementById("Matkhau").value;

        // Clear previous error messages
        document.getElementById("usernameError").innerHTML = "";
        document.getElementById("passwordError").innerHTML = "";

        if (username === "") {
            document.getElementById("usernameError").innerHTML = "Username is required";
            isValid = false;
        }

        if (password === "") {
            document.getElementById("passwordError").innerHTML = "Password is required";
            isValid = false;
        }

        return isValid;
    }
</script>

